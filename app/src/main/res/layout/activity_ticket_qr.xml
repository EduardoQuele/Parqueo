<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Vistas.TicketQR"
    android:orientation="vertical"
    android:background="@color/VeryLightGray"
    android:weightSum="8"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:text="Ticket QR"
            android:textColor="@color/DarkModerateLimeGreen"
            android:textSize="24sp"
            android:background="@color/White"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Eduardo Quele"
                android:textColor="@color/MostlyBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:elevation="8dp"
                    android:background="@color/VeryLightGray"
                    app:cardBackgroundColor="@color/VividRed"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:text="Jun"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:height="25dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:background="@color/White"
                        android:text="4"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:text="Precio: "
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:text="Area: "
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:text="Día: "
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:layout_gravity="start"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$1.00 "
                        android:textSize="17sp"
                        android:textColor="@color/GrayText2"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="17sp"
                        android:textColor="@color/GrayText2"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Martes"
                        android:textSize="17sp"
                        android:textColor="@color/GrayText2"
                        android:layout_gravity="start"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:text="Estado: "
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:text="Espacio: "
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:text="Hora: "
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/MostlyBlack"
                        android:layout_gravity="start"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="En proceso"
                        android:textSize="16sp"
                        android:textColor="@color/DarkModerateLimeGreen"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="17sp"
                        android:textColor="@color/GrayText2"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3:20 pm"
                        android:textSize="17sp"
                        android:textColor="@color/GrayText2"
                        android:layout_gravity="start"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/MostlyBlack"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qr_code" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:justificationMode="inter_word"
                android:lines="3"
                android:padding="0dp"
                android:text="Presente este código para que le permitan el ingreso a las instalaciones, el estado de la reservación sera cambiado automáticamente."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/DarkModerateLimeGreen"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ticket"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/White"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>